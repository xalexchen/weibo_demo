<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_topmenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android1:background="@drawable/ic_home_bg" >

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="left|top"
        android1:layout_marginLeft="30dp"
        android1:layout_marginTop="10dp"
        android1:gravity="center"
        android1:orientation="vertical" >

        <ImageView
            android1:id="@+id/home_group_img"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center"
            android1:src="@drawable/ic_home_friend_group_nor" />

        <TextView
            android1:id="@+id/home_group_text"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:gravity="center_horizontal"
            android1:text="全部分组"
            android1:textColor="@color/home_color"
            android1:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android1:id="@+id/home_line_vertical"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBottom="@id/home_group_text"
        android1:layout_alignParentTop="false"
        android1:layout_marginLeft="30dp"
        android1:layout_marginTop="20dp"
        android1:layout_toRightOf="@+id/home_group_text"
        android1:src="@drawable/ic_home_line_vertical" />

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="left|top"
        android1:layout_marginLeft="30dp"
        android1:layout_marginTop="10dp"
        android1:orientation="vertical" >

        <ImageView
            android1:id="@+id/home_all_img"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center"
            android1:src="@drawable/ic_home_all_nor" />

        <TextView
            android1:id="@+id/home_all_text"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center"
            android1:gravity="center"
            android1:text="全部"
            android1:textColor="@color/home_color"
            android1:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="left|top"
        android1:layout_marginLeft="40dp"
        android1:layout_marginTop="10dp"
        android1:orientation="vertical" >

        <ImageView
            android1:id="@+id/home_image_image"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:src="@drawable/ic_home_image_nor" />

        <TextView
            android1:id="@+id/home_image_text"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:gravity="center"
            android1:text="图片"
            android1:textColor="@color/home_color"
            android1:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_marginLeft="40dp"
        android1:layout_marginTop="10dp"
        android1:orientation="vertical" >

        <ImageView
            android1:id="@+id/home_origin_img"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:src="@drawable/ic_home_image_nor" />

        <TextView
            android1:id="@+id/home_origin_text"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:gravity="center"
            android1:text="原创"
            android1:textColor="@color/home_color"
            android1:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_marginLeft="40dp"
        android1:layout_marginTop="10dp"
        android1:orientation="vertical" >

        <ImageView
            android1:id="@+id/home_video_img"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:src="@drawable/ic_home_video_nor" />

        <TextView
            android1:id="@+id/home_video_text"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:gravity="center"
            android1:text="视频"
            android1:textColor="@color/home_color"
            android1:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_marginLeft="40dp"
        android1:layout_marginTop="10dp"
        android1:orientation="vertical" >

        <ImageView
            android1:id="@+id/home_music_img"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:src="@drawable/ic_home_music_nor" />

        <TextView
            android1:id="@+id/home_music_text"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:gravity="center"
            android1:text="音乐"
            android1:textColor="@color/home_color"
            android1:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
